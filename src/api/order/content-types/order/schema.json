{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "order"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "client_name": {
      "type": "string"
    },
    "phone_number": {
      "type": "string"
    },
    "full_address": {
      "type": "string"
    },
    "total_price": {
      "type": "float"
    },
    "order_status": {
      "type": "enumeration",
      "enum": [
        "pending",
        "cancelled",
        "accepted"
      ]
    },
    "order_items": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::order-item.order-item",
      "mappedBy": "orders"
    },
    "payment_method": {
      "type": "enumeration",
      "enum": [
        "Cash_On_delivery",
        "E-wallet",
        "instapay"
      ]
    },
    "proof_image": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    }
  }
}
